<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Score</th>
      <th>Strain</th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td><%= wine.oenologist_name %></td>
        <td><%= wine.score %></td>
        <td><%= wine.strainnames_and_percentages %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Show', wine %></td>
          <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
          <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "Logout", destroy_user_session_path, method: :delete %>

<% if current_user.admin?  %>
  <%= link_to 'New Wine', new_wine_path %>
  <%= link_to 'New Strain', new_strain_path %>
  <%= link_to 'Oenologist', oenologists_path %>
  <%= link_to 'Magazines', magazines_path %>
  <%= link_to 'Jobtitles', jobtitles_path %>
  
<% end %>
